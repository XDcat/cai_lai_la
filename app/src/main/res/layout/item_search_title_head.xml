<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="60dp"
	android:background="@color/home_head"
	xmlns:app="http://schemas.android.com/apk/res-auto">
	
	<ImageView
		android:id="@+id/search_result_back"
		android:layout_marginLeft="10dp"
		android:layout_width="@dimen/search_result_title_icon"
		android:layout_height="@dimen/search_result_title_icon"
		android:src="@drawable/ic_back"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@id/search_result_lin"
		/>
	<LinearLayout
		android:id="@+id/search_result_lin"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		app:layout_constraintLeft_toRightOf="@id/search_result_back"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		android:layout_marginTop="10dp"
		android:layout_marginBottom="10dp"
		android:background="@drawable/home_title_bar_search_corner_bg"
		android:orientation="horizontal"
		android:gravity="center_vertical"
		>
		<ImageView
			android:id="@+id/search_result_search"
			android:layout_width="@dimen/search_result_title_search"
			android:layout_height="@dimen/search_result_title_search"
			android:src="@drawable/home_title_search_icon"
			android:layout_margin="5dp"
			/>
		<TextView
			android:id="@+id/search_result_text"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_margin="10dp"
			app:layout_constraintTop_toTopOf="parent"
			android:text="快来搜索一下吧"
			android:gravity="center_vertical"
			android:background="@drawable/home_title_bar_search_corner_bg"
			/>
	</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>