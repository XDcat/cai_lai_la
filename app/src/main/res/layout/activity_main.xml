<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity">
	
	
	<!-- 搜索框 -->
	<!--	背景-->
	<ImageView
		android:id="@+id/home_title_bg"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:background="@color/home_head"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toTopOf="parent"></ImageView>
	<!--	头像-->
	<ImageView
		android:id="@+id/home_head_icon"
		android:layout_width="0dp"
		android:layout_height="30dp"
		android:layout_marginLeft="10dp"
		android:src="@drawable/test1"
		app:layout_constraintBottom_toBottomOf="@+id/home_title_bg"
		app:layout_constraintDimensionRatio="1:1"
		app:layout_constraintLeft_toLeftOf="@+id/home_title_bg"
		app:layout_constraintTop_toTopOf="@+id/home_title_bg"></ImageView>
	<!--	地址-->
	<LinearLayout
		android:id="@+id/home_title_search"
		android:layout_width="0dp"
		android:layout_height="30dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_weight="1"
		android:background="@drawable/home_title_bar_search_corner_bg"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		app:layout_constraintBottom_toBottomOf="@+id/home_title_address"
		app:layout_constraintLeft_toRightOf="@+id/home_title_address"
		app:layout_constraintRight_toRightOf="@+id/home_title_bg"
		app:layout_constraintTop_toTopOf="@+id/home_title_address"
		tools:ignore="MissingConstraints">
		
		<ImageView
			android:layout_width="15dp"
			android:layout_height="15dp"
			android:layout_marginLeft="5dp"
			android:src="@drawable/home_title_search_icon" />>
		
		<TextView
			android:layout_width="0dp"
			android:layout_height="30dp"
			android:layout_marginLeft="3dp"
			android:layout_weight="1"
			android:ellipsize="end"
			android:gravity="center_vertical"
			android:lines="1"
			android:text="快来搜索一下吧"
			android:textSize="15sp" />>
	</LinearLayout>
	
	<TextView
		android:id="@+id/home_title_address"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:text="请在这里输入地址"
		app:layout_constraintBottom_toBottomOf="@+id/home_head_icon"
		app:layout_constraintLeft_toRightOf="@+id/home_head_icon"
		app:layout_constraintTop_toTopOf="@+id/home_head_icon"></TextView>
	
	<!--	<include layout="@layout/layout_toolbar"/>-->
	<com.aurelhubert.ahbottomnavigation.AHBottomNavigationViewPager
		android:id="@+id/view_pager"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		app:layout_constraintTop_toBottomOf="@id/home_title_bg"
		/>
	<com.aurelhubert.ahbottomnavigation.AHBottomNavigation
		android:id="@+id/button_navigation"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintBottom_toBottomOf="parent" />
	



</androidx.constraintlayout.widget.ConstraintLayout>